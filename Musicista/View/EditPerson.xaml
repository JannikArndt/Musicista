<Window x:Class="Musicista.View.EditPerson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="../AppIcon.ico"
        Title="Edit Person" Height="400" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16" Text="Edit Person" />
        <ComboBox HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="120" Name="PersonTypeComboBox" SelectionChanged="ComboBox_SelectionChanged" />
        <StackPanel Grid.Row="2" Orientation="Vertical" Name="MainStackPanel" Width="300"></StackPanel>
        <Button Content="Close" Width="100" Grid.Row="3" HorizontalAlignment="Right" Margin="0,5,20,5" Click="CloseClick" Name="CloseButton"></Button>
        
    </Grid>
</Window>
